<html>
<body>

  <div class="navbar">
    <span>=</span>
      <span><em>Mister Cocktail</em></span>
    <span class="btn btn-primary"><%= link_to " + cocktail", new_cocktail_path %></span>
  </div>

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1531002329786-97e3efcb754b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=5cc826864e1890cc916a71b4de444385&auto=format&fit=crop&w=750&q=80');">
  <!--   <div class="banner-content">
      <h1>Party</h1>
    </div> -->
  </div>


  <div class="container">
    <div class="cards">

    <% @cocktails.each do |cocktail| %>
    <!-- <div class="col-sm" -->
      <% if cocktail.photo.present? %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, crop: :fill %>');">
        <% else %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1517093911940-08cb5b3952e7?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=101c26932078be8b5fc48798d5b3f710&auto=format&fit=crop&w=1366&q=80');">
          <% end %>
        <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
              <p><%= link_to "Delete", destroy_path(cocktail),
              method: :delete,
              data: { confirm: "Are you sure?" } %></p>
          </div>
         <%=  link_to "infos", cocktail_path(cocktail), :class=>"card-link" %>
      <!-- </div> -->
        </div>
      <% end %>
    </div>
  </div>

</body>
</html>
