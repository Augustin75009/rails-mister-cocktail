<h1>Cocktail#show</h1>
<p>Find me in app/views/cocktail/show.html.erb</p>
<li>
<%= @cocktail.name %>
<%= cl_image_tag @cocktail.photo if @cocktail.photo.present? %>
</li>

<% @cocktail.doses.each do |dose| %>
<li>
<%= dose.ingredient.name %>
<%= dose.description %>
<%= link_to "Delete", dose_destroy_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
</li>

<%= link_to "+ dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "back", cocktails_path%>

