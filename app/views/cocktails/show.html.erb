<div class="navbar-show">
  <span><%= link_to "back", cocktails_path%></span>
    <span><em>Mister Cocktail</em></span>
  <span class="btn btn-primary"><%= link_to "+ dose", new_cocktail_dose_path(@cocktail) %></span>
</div>
<div class="cocktail-container">
  <div class="image" style="height: 400px; width:250">
    <%= cl_image_tag @cocktail.photo , height: 300, width: 400, crop: :fill if @cocktail.photo.present? %>
  </div>
  <div class="description">
      <%= @cocktail.name %>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.ingredient.name %>
            <%= dose.description %>
            <%= link_to "Delete", dose_destroy_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
          </li>
        <% end %>
    </div>
</div>



